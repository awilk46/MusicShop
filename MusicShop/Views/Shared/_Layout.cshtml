<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />
    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>
    <script src="@Url.Content("~/Scripts/umd/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.0.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.0.0.slim.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/slideshow.js")"></script>

    @RenderSection("styles", false)
    @RenderSection("scripts", false)
</head>
<body class="edit-body">
    <!--NAVIGATION-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Strona Główna</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0"></ul>

            <div class="nav-item koszyk-nav-item">
                <a id="koszykHeaderLink" href="@Url.Action("Index", "Koszyk")">
                    Koszyk (<text id="koszyk-naglowek-ilosc-elementow">@Html.Action("PobierzIloscElementowKoszyka", "Koszyk")</text>)<span></span>
                </a>
            </div>

            <ul class="navbar-nav">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>

    <div class="carousel-item">
        <img src="..." alt="...">
        <div class="carousel-caption d-none d-md-block">
            <h5>...</h5>
            <p>...</p>
        </div>
    </div>
    <div>@RenderBody()</div>
    <!-- FOOTER -->
    <footer class="page-footer font-small pt-4 footer-edit">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-md-2 edit-logo">
                    <img style="width:100px;height:100px;" src="~/Content/Images/music-logo.png" />
                </div>
                <div class="col-md-4 mt-md-0 mt-0">
                    <h5 class="text-uppercase">Sklep Muzyczny</h5>
                    <p>Peron 1 i 3/4, 00-123 Londyn</p>
                </div>
                <hr class="clearfix w-100 d-md-none pb-3">
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase">Informacje</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a class="anchor-edit" href="@Url.Action("StronyStatyczne","Home",new { nazwa="Onas"})">O nas</a>
                        </li>

                        <li>
                            <a class="anchor-edit" href="@Url.Action("StronyStatyczne","Home",new { nazwa="Help"})">Pomoc</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 mb-md-0 mb-3">
                    <h5 class="text-uppercase">Centrum pomocy</h5>
                    <ul class="list-unstyled">
                     
                        <li>
                            <a class="anchor-edit" href="@Url.Action("StronyStatyczne","Home",new { nazwa="Regulamin"})">Regulamin</a>
                        </li>
                        <li>
                            <a class="anchor-edit" href="@Url.Action("StronyStatyczne","Home",new { nazwa="Kontakt"})">Kontakt</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
        <div class="footer-copyright text-center py-3 footer-copyr">
            © 2019 Copyright: <a>Adrian Wilk</a>
        </div>
    </footer>
</body>
</html>